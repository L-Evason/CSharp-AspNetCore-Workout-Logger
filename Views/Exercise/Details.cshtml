@model ExerciseRoutine.Models.Exercise

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Exercise</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
@if(Model.Muscles is not null)
{   
    <h5>Associated muscles</h5>
    <ul>
    @foreach(var muscle in Model.Muscles)
    {
        <li>@muscle.Name</li>
    }
    </ul>
}
@if(Model.Muscles is null)
{
    <a>No muscles assosiated with this exercise</a>
}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
