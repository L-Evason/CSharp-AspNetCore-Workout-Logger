@model ExerciseRoutine.Models.Muscle

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Muscle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
@if(Model.Group is not null)
{   
    <dl class="row">
        <dt class = "col-sm-2">
            Group 
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
    </dl>
}
