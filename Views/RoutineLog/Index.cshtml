@model IEnumerable<ExerciseRoutine.Models.RoutineLog>

@{
    ViewData["Title"] = "Index";
}

<h1>All logs</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Routine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLogged)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Routine.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateLogged)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
