@model ExerciseRoutine.Models.RoutineLog

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Routine.Name Log</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateLogged)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateLogged)
        </dd>
    </dl>
</div>
@foreach (var setLog in Model.SetLogs)
{   
    @if (setLog.Exercise is not null)
    {
        <li class="set-log-item">
            <div class="exercise-info">
                <strong>@setLog.Exercise.Name</strong>
            </div>
            <div class="set-details">
                <span><strong>Weight:</strong> @setLog.Weight</span>
                <span><strong>Reps:</strong> @setLog.Reps</span>
            </div>
        </li>
    }
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
