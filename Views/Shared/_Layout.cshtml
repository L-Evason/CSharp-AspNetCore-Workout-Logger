<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSharpAspNetCoreExample</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSharpAspNetCoreExample.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="MuscleGroup" asp-action="Index">Muscle Groups</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Muscle" asp-action="Index">Muscles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Exercise" asp-action="Index">Exercises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Routine" asp-action="Index">Routines</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="RoutineLog" asp-action="Index">Routine Logs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SetLog" asp-action="Index">Set Logs</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CSharpAspNetCoreExample - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
